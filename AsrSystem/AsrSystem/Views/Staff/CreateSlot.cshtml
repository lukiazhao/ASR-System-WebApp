@model AsrSystem.Models.Slot;

@{
    ViewData["Title"] = "CreateSlot";

}

<h2>Create</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
               
                @*@Html.DropDownListFor(m => m.RoomID, new SelectList((IEnumerable<Room>) ViewData["Room"]), "Select Room", new { @class = "form-control" })*@
                <input asp-for="RoomID" class="form-control" />
                @*@Html.DropDownListFor(m => m.Rooms, new SelectList(Model.Rooms.Select(x => x.RoomID)), "Select Room")*@
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />

                <span class="note">School working hours are 9am to 2pm</span>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffID" class="control-label"></label>
                <input asp-for="StaffID" class="form-control" />
                <span asp-validation-for="StaffID" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="StudentID" class="control-label"></label>
                    <input asp-for="StudentID" class="form-control" />
                    <span asp-validation-for="StudentID" class="text-danger"></span>
                </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SlotTable">Back to Slot List</a>
</div>

